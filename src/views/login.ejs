<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream Trip</title>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="shortcut icon" href="/images/favicon.png" type="image/png">
</head>
<body>
    <section id="logo">
        <p id="welcome">Welcome Back</p>
        <img src="/images/DreamTRIPlogo.png" alt="the logo in a bigger size">
    </section>
    <section id="form">
        <form action="/login" method="post">
         <div class="demail"> 
            <label for="username"> Your full name</label><br>
            <input type="text" name="username" required
             placeholder="Enter your Full name" id="email">
            <br><br>
        </div>
        <div class="dpassword"> 
            <label for="password">Password</label><br>
            <input type="password" name="psword" id="password" 
             required placeholder="Enter your password">
            <br>
        </div>
        <div class="deye">
             <button type="checkbox" onclick="myFunction()"><img src="/images/view.png" id="eye"></button>
        </div>
        <!-- <p id="fpass"><a href="">Forgot Password</a> </p> -->
        <br><br>
        <button type="submit" id="login">Login</button>
        <br><br>
        <p class="new ">New here?<a href="/register">Sign up</a></p>
        </form>
    </section>


    <script defer>
        function myFunction(){
    var x = document.getElementById('password');
    if (x.type === 'password'){
        x.type = 'text'; 
    } else {
        x.type = 'password';
    }
}
    </script>
</body>
</html>